@{
    ViewData["Title"] = "Inicio";
}

<style>
    .main-title {
        font-size: 3.5rem;
        font-weight: bold;
        color: #2c3e50;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        margin-bottom: 1rem;
        animation: fadeInDown 1s ease-out;
    }

    .lead-text {
        font-size: 1.25rem;
        color: #555;
        margin-bottom: 2rem;
    }

    .btn-custom {
        font-size: 1.1rem;
        padding: 1rem 2rem;
        border-radius: 12px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .btn-custom:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 12px rgba(0,0,0,0.2);
        opacity: 0.9;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="text-center">
    <h1 class="main-title">Inmobiliaria Benito</h1>
    <p class="lead-text">Seleccioná una sección para comenzar</p>

    <div class="mt-4 d-flex justify-content-center gap-4 flex-wrap">
        <a class="btn btn-primary btn-lg btn-custom" href="@Url.Action("Index", "Inquilino")">
            <i class="bi bi-person-badge-fill"></i> Inquilinos
        </a>
        <a class="btn btn-success btn-lg btn-custom" href="@Url.Action("Index", "Inmueble")">
            <i class="bi bi-house-fill"></i> Inmuebles
        </a>
        <a class="btn btn-warning btn-lg btn-custom" href="@Url.Action("Index", "Contrato")">
            <i class="bi bi-file-earmark-text-fill"></i> Contratos
        </a>
        <a class="btn btn-info btn-lg btn-custom" href="@Url.Action("Index", "Pago")">
            <i class="bi bi-cash-coin"></i> Pagos
        </a>
        <a class="btn btn-dark btn-lg btn-custom" href="@Url.Action("Index", "Usuario")">
            <i class="bi bi-person-lines-fill"></i> Usuarios
        </a>
    </div>
</div>
