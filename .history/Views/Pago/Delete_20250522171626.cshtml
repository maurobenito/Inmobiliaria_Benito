@model Inmobiliaria_Benito.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h2>Eliminar Pago</h2>

<h4>¿Estás seguro que deseas eliminar este pago?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Contrato</dt>
    <dd class="col-sm-10">@Model.IdContratoNavigation?.ContratoId</dd>

    <dt class="col-sm-2">Fecha de Pago</dt>
    <dd class="col-sm-10">@Model.FechaPago?.ToShortDateString()</dd>

    <dt class="col-sm-2">Importe</dt>
    <dd class="col-sm-10">$@Model.Importe</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="PagoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
