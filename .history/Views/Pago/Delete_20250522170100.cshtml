@model Inmobiliaria_Benito.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<h2>¿Está seguro que desea eliminar este pago?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Contrato</dt>
        <dd class="col-sm-10">@Model.IdContratoNavigation?.ContratoId</dd>

        <dt class="col-sm-2">N° de Pago</dt>
        <dd class="col-sm-10">@Model.NumeroPago</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.FechaPago</dd>

        <dt class="col-sm-2">Importe</dt>
        <dd class="col-sm-10">@Model.Importe</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="PagoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
