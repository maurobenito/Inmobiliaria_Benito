@model Inmobiliaria_Benito.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<h2>Editar Pago</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="PagoId" />
    <div class="form-group">
        <label asp-for="ContratoId" class="control-label">Contrato</label>
        <select asp-for="ContratoId" class="form-control" asp-items="ViewBag.Contratos"></select>
    </div>
    <div class="form-group">
        <label asp-for="NumeroPago" class="control-label"></label>
        <input asp-for="NumeroPago" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaPago" class="control-label"></label>
        <input asp-for="FechaPago" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Importe" class="control-label"></label>
        <input asp-for="Importe" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
