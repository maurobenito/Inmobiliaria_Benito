@model IEnumerable<Inmobiliaria_Benito.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<h1>Pagos</h1>

<p>
    <a asp-action="Create">Crear nuevo pago</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Contrato</th>
