@model Inmobiliaria_Benito.Models.Pago

@{
    ViewData["Title"] = "Detalle de Pago";
}

<h2>Detalle de Pago</h2>

<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Contrato</dt>
        <dd class="col-sm-10">@Model.IdContratoNavigation?.ContratoId</dd>

        <dt class="col-sm-2">Fecha de Pago</dt>
        <dd class="col-sm-10">@Model.FechaPago?.ToShortDateString()</dd>

        <dt class="col-sm-2">Importe</dt>
        <dd class="col-sm-10">$@Model.Importe</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.PagoId" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
