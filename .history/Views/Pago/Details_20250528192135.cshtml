@model Inmobiliaria_Benito.Models.Pago

@{
    ViewData["Title"] = "Detalles del Pago";
}

<h2>Detalles del Pago</h2>

<div>
    <h4>Pago</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">NÃºmero de Pago</dt>
        <dd class="col-sm-10">@Model.NumeroPago</dd>

        <dt class="col-sm-2">Fecha de Pago</dt>
        <dd class="col-sm-10">@Model.FechaPago</dd>

        <dt class="col-sm-2">Importe</dt>
        <dd class="col-sm-10">$@Model.Importe?.ToString("N2")</dd>

        <dt class="col-sm-2">Contrato</dt>
        <dd class="col-sm-10">
            @Model.IdContratoNavigation?.IdInquilinoNavigation?.Nombre -
            @Model.IdContratoNavigation?.IdInmuebleNavigation?.Direccion
        </dd>

        <dt class="col-sm-2">Creado por</dt>
        <dd class="col-sm-10">
            @(Model.UsuarioCreacion != null 
                ? Model.UsuarioCreacion.Nombre + " " + Model.UsuarioCreacion.Apellido 
                : "No disponible")
        </dd>

        @if (Model.UsuarioAnulacion != null)
        {
            <dt class="col-sm-2">Anulado por</dt>
            <dd class="col-sm-10">@Model.UsuarioAnulacion.Nombre @Model.UsuarioAnulacion.Apellido</dd>
        }
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.PagoId" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
