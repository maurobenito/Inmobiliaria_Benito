@model IEnumerable<Inmobiliaria_Benito.Models.Inquilino>

@{
    ViewData["Title"] = "Lista de Inquilinos";
}

<h2>Inquilinos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Inquilino</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Tel√©fono</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Dni</td>
            <td>@item.Telefono</td>
            <td>@item.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InquilinoId" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.InquilinoId" class="btn btn-sm btn-info">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.InquilinoId" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
