@model Inmobiliaria_Benito.Models.ContratoViewModel

@{
    ViewData["Title"] = "Nuevo Contrato";
}

<h2>Nuevo Contrato</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Contrato.IdInquilino" class="control-label">Inquilino</label>
        <select asp-for="Contrato.IdInquilino" class="form-control"
                asp-items="Model.Inquilinos">
            <option value="">Seleccione un inquilino</option>
        </select>
        <span asp-validation-for="Contrato.IdInquilino" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contrato.IdInmueble" class="control-label">Inmueble</label>
        <select asp-for="Contrato.IdInmueble" class="form-control"
                asp-items="Model.Inmuebles">
            <option value="">Seleccione un inmueble</option>
        </select>
        <span asp-validation-for="Contrato.IdInmueble" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contrato.FechaDesde" class="control-label"></label>
        <input asp-for="Contrato.FechaDesde" class="form-control" type="date" />
        <span asp-validation-for="Contrato.FechaDesde" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contrato.FechaHasta" class="control-label"></label>
        <input asp-for="Contrato.FechaHasta" class="form-control" type="date" />
        <span asp-validation-for="Contrato.FechaHasta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contrato.Monto" class="control-label"></label>
        <input asp-for="Contrato.Monto" class="form-control" />
        <span asp-validation-for="Contrato.Monto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
