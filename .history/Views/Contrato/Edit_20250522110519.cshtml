@model Inmobiliaria_Benito.Models.Pago

<h1>Editar Pago</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="PagoId" />
    <div class="form-group">
        <label asp-for="ContratoId"></label>
        <select asp-for="ContratoId" class="form-control" asp-items="ViewBag.ContratoId"></select>
    </div>
    <div class="form-group">
        <label asp-for="NumeroPago"></label>
        <input asp-for="NumeroPago" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FechaPago"></label>
        <input asp-for="FechaPago" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Importe"></label>
        <input asp-for="Importe" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
