@model List<Inmobiliaria_Benito.Models.Contrato>
@{
    ViewData["Title"] = "Contratos Vigentes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Contratos de alquiler vigentes</h2>
        </a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Inquilino</th>
                <th>Inmueble</th>
                <th>Fecha Desde</th>
                <th>Fecha Hasta</th>
                <th>Monto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdInquilinoNavigation?.Nombre @item.IdInquilinoNavigation?.Apellido</td>
                    <td>@item.IdInmuebleNavigation?.Direccion</td>
                    <td>@(item.FechaDesde?.ToString("dd/MM/yyyy"))</td>
                    <td>@(item.FechaHasta?.ToString("dd/MM/yyyy"))</td>
                    <td>@(item.Monto.HasValue ? item.Monto.Value.ToString("C") : "")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ContratoId" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
