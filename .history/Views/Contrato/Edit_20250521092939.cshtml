@model Inmobiliaria_Benito.Models.ContratoViewModel

@{
    ViewData["Title"] = "Editar Contrato";
}

<h1>Editar Contrato</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Contrato.ContratoId" />

    <div class="form-group">
        <label asp-for="Contrato.IdInquilino"></label>
        <select asp-for="Contrato.IdInquilino" class="form-control" asp-items="Model.Inquilinos"></select>
    </div>

    <div class="form-group">
        <label asp-for="Contrato.IdInmueble"></label>
        <select asp-for="Contrato.IdInmueble" class="form-control" asp-items="Model.Inmuebles"></select>
    </div>

    <div class="form-group">
        <label asp-for="Contrato.FechaDesde"></label>
        <input asp-for="Contrato.FechaDesde" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Contrato.FechaHasta"></label>
        <input asp-for="Contrato.FechaHasta" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Contrato.Monto"></label>
        <input asp-for="Contrato.Monto" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
