@model IEnumerable<Inmobiliaria_Benito.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4"><i class="bi bi-people-fill"></i> @ViewData["Title"]</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-person-plus-fill"></i> Crear nuevo
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Avatar</th>
                <th style="min-width: 220px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.Rol == "1")
                        {
                            <span class="badge bg-danger">Administrador</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Empleado</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FotoPerfil))
                        {
                            <img src="@item.FotoPerfil" alt="Avatar" width="50" height="50" class="rounded-circle border" />
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Sin foto</span>
                        }
                    </td>
                    <td>
                        <a asp-action="EditPerfil" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-info me-1">
                            <i class="bi bi-eye"></i> Detalles
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
