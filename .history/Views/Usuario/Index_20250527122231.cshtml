@model IEnumerable<Inmobiliaria_Benito.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nuevo</a>
</p>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Avatar</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Email</td>
            <td>@(item.Rol == "1" ? "Administrador" : "Empleado")</td>
            <td>
                @if (!string.IsNullOrEmpty(item.FotoPerfil))
                {
                    <img src="@item.FotoPerfil" alt="Avatar" width="50" height="50" class="rounded-circle" />
                }
            </td>
            <td>
                <a asp-action="EditPerfil" asp-route-id="@item.UsuarioId" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-info btn-sm">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
