@model List<Inmobiliaria_Benito.Models.Inmueble>

<h2>Inmuebles Disponibles</h2>
<table class="table">
    <thead>
        <tr>
            <th>Direcci√≥n</th>
            <th>Uso</th>
            <th>Propietario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Direccion</td>
                <td>@item.Uso</td>
                <td>
                    @(item.IdPropietarioNavigation != null 
                      ? $"{item.IdPropietarioNavigation.Nombre} {item.IdPropietarioNavigation.Apellido}" 
                      : "Propietario desconocido")
                </td>
            </tr>
        }
    </tbody>
</table>
