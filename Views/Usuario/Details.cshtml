@model Inmobiliaria_Benito.Models.Usuario
@{
    ViewData["Title"] = "Detalles de Usuario";
}

<h2>Detalles de Usuario</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Rol</dd>

        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
        {
            <dt class="col-sm-2">Foto</dt>
            <dd class="col-sm-10">
                <img src="@Url.Content(Model.FotoPerfil)" alt="Foto de perfil" width="150" />
            </dd>
        }
    </dl>
</div>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
